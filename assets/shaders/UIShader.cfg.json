{
  "version": 1.0,
  "name": "UIShader",
  "renderpass": "RenderPass.Builtin.UI",
  "stages": [
    { "stage": "vertex", "file": "UIShader.vert.spv" },
    { "stage": "fragment", "file": "UIShader.frag.spv" }
  ],
  "use-instances": true,
  "use-local": true,
  "attributes": [
    { "type": "vec2", "name": "in_position" },
    { "type": "vec2", "name": "in_texcoord" }
  ],
  "uniforms": [
    { "type": "mat4", "scope": "global", "name": "projection" },
    { "type": "mat4", "scope": "global", "name": "view" },
    { "type": "vec4", "scope": "instance", "name": "diffuse_colour" },
    { "type": "samp", "scope": "instance", "name": "diffuse_texture" },
    { "type": "mat4", "scope": "model", "name": "model" }
  ]
}
