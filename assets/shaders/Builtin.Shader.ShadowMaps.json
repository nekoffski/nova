{
  "version": 1.0,
  "cullMode": "back",
  "polygonMode": "fill",
  "stages": [
    { "stage": "vertex", "file": "Builtin.Shader.ShadowMaps.vert.spv" },
    { "stage": "fragment", "file": "Builtin.Shader.ShadowMaps.frag.spv" }
  ],
  "use-instances": true,
  "use-local": true,
  "attributes": [
    { "type": "vec3", "name": "inPosition" },
    { "type": "vec3", "name": "inNormal" },
    { "type": "vec2", "name": "inTextureCoordinates" },
    { "type": "vec4", "name": "inColor" },
    { "type": "vec4", "name": "inTangent" }
  ],
  "uniforms": [
    { "type": "mat4", "scope": "global", "name": "depthMVP" },
    { "type": "mat4", "scope": "local", "name": "model" }
  ]
}
