{
  "version": 1.0,
  "name": "Builtin.Shader.Skybox",
  "cullMode": "front",
  "stages": [
    { "stage": "vertex", "file": "Builtin.Shader.Skybox.vert.spv" },
    { "stage": "fragment", "file": "Builtin.Shader.Skybox.frag.spv" }
  ],
  "use-instances": true,
  "use-local": false,
  "attributes": [
    { "type": "vec3", "name": "inPosition" },
    { "type": "vec3", "name": "inNormal" },
    { "type": "vec2", "name": "inTextureCoordinates" },
    { "type": "vec4", "name": "inColor" },
    { "type": "vec4", "name": "inTangent" }
  ],
  "uniforms": [
    { "type": "mat4", "scope": "global", "name": "projection" },
    { "type": "mat4", "scope": "global", "name": "view" },
    { "type": "samp", "scope": "instance", "name": "cubeTexture" }
  ]
}
